{
    "name": "Youcode Test Solver ",
    "description":"a google chrome extension to solve youcode quizz test",
    "version": "1.0",
    "manifest_version": 3,
    "icons": { 
    "16": "images/c63efff620b80095e0ee59e2cee6b1e0-32bits-16.png",
    "48": "images/c63efff620b80095e0ee59e2cee6b1e0-32bits-48.png",
    "128": "images/bd39b68377e8d7852cc48ee1d240eec3-32bits-128.png" },
    "background": {
    "service_worker": "background.js"

    },
    "permissions": ["storage", "activeTab", "scripting",
        "webRequest",
        "contextMenus",
        "tabs"  
      ], 
    "host_permissions": ["*://*/*"],
    "content_scripts": [{
        "matches":["<all_urls>"],
        "js":["inject.js"],
        "run_at": "document_start"

    }],
    "action":{
    "default_icon":"images/c63efff620b80095e0ee59e2cee6b1e0-32bits-48.png",
    "default_popup":"popup.html",
    "default_title":"Let's succeed together"
    },
    "devtools_page":"devtools.html" ,
    "web_accessible_resources":  [ {
        "resources": [ "injected.js" ],
        "matches":["<all_urls>"]
      }
    ]
     
  }